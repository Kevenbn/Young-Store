<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.loginyoungstore.ui.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.loginyoungstore.ui.auth.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_recoverAccountFragment"
            app:destination="@id/recoverAccountFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/menu_home" />
    </fragment>
    <fragment
        android:id="@+id/recoverAccountFragment"
        android:name="com.example.loginyoungstore.ui.auth.RecoverAccountFragment"
        android:label="fragment_recover_account"
        tools:layout="@layout/fragment_recover_account" >
        <action
            android:id="@+id/action_recoverAccountFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.loginyoungstore.ui.auth.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.loginyoungstore.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />

    <activity
        android:id="@+id/menu_home"
        android:name="com.nascimentokeven.youngstore.TelaProdutos"
        android:label="activity_produtos"
        tools:layout="@layout/activity_produtos" />
    <activity
        android:id="@+id/menu_categorias"
        android:name="com.nascimentokeven.youngstore.TelaCategorias"
        android:label="activity_categorias"
        tools:layout="@layout/activity_categorias" />
    <activity
        android:id="@+id/menu_carrinho"
        android:name="com.nascimentokeven.youngstore.TelaCarrinho"
        android:label="activity_carrinho"
        tools:layout="@layout/activity_carrinho" />

    <activity
        android:id="@+id/menu_usuario"
        android:name="com.nascimentokeven.youngstore.TelaConta"
        android:label="activity_conta"
        tools:layout="@layout/activity_screen_account" />

</navigation>