<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaCategorias">

    <TextView
        android:id="@+id/Tv_Category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Test_verde"
        android:text="     Categorias"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Bt_Category_Man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/icon_category_men"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tv_Category" />

    <Button
        android:id="@+id/Bt_Category_Women"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/icon_category_women"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bt_Category_Man" />

    <Button
        android:id="@+id/Bt_Category_Children"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/icon_category_children"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bt_Category_Women" />

    <Button
        android:id="@+id/Bt_Category_Sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/icon_category_sport"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bt_Category_Children" />

    <Button
        android:id="@+id/Bt_Category_Shoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/icon_category_cal_ados_teste"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bt_Category_Sport" />

    <Button
        android:id="@+id/Bt_Category_Home"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/icon_home"
        app:layout_constraintEnd_toStartOf="@+id/Bt_Category_Menu"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Iv_Category_BackImButtons" />

    <Button
        android:id="@+id/Bt_Category_Menu"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/icon_menu"
        app:layout_constraintEnd_toStartOf="@+id/Bt_Category_Fav"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Bt_Category_Home"
        app:layout_constraintTop_toTopOf="@+id/Iv_Category_BackImButtons" />

    <Button
        android:id="@+id/Bt_Category_Fav"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/icon_fav"
        app:layout_constraintEnd_toStartOf="@+id/Bt_Category_Carrinho"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Bt_Category_Menu"
        app:layout_constraintTop_toTopOf="@+id/Iv_Category_BackImButtons" />

    <Button
        android:id="@+id/Bt_Category_Carrinho"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/icon_carrinho_de_compras"
        app:layout_constraintEnd_toStartOf="@+id/Bt_Category_Account"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Bt_Category_Fav"
        app:layout_constraintTop_toTopOf="@+id/Iv_Category_BackImButtons" />

    <Button
        android:id="@+id/Bt_Category_Account"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/icon_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Bt_Category_Carrinho"
        app:layout_constraintTop_toTopOf="@+id/Iv_Category_BackImButtons" />

    <ImageView
        android:id="@+id/Iv_Category_BackImButtons"
        android:layout_width="425dp"
        android:layout_height="74dp"
        android:layout_marginTop="95dp"
        android:src="@android:drawable/bottom_bar"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bt_Category_Shoes"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>